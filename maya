<body>
	<h1>Truth or Dare</h1>
	<div class="container">
		<button class="btn" id="truthBtn">Truth</button>
		<button class="btn" id="dareBtn">Dare</button>
	</div>

	<div class="hidden" id="imageContainer">
		<img src="" alt="Random Image" id="randomImage">
		<button class="replay" id="replayBtn">Play Again</button>
	</div>

	<script>
		(function() {
			const truthImages = [
				"https://images.pexels.com/photos/16856841/pexels-photo-16856841.jpeg?auto=compress&cs=tinysrgb&w=800&lazy=load",
				"https://images.pexels.com/photos/16856838/pexels-photo-16856838.jpeg?auto=compress&cs=tinysrgb&w=800&lazy=load",
				"https://images.pexels.com/photos/16856746/pexels-photo-16856746.jpeg?auto=compress&cs=tinysrgb&w=800&lazy=load",
				"https://images.pexels.com/photos/16856745/pexels-photo-16856745.jpeg?auto=compress&cs=tinysrgb&w=800&lazy=load",
				"https://images.pexels.com/photos/16971359/pexels-photo-16971359.jpeg?auto=compress&cs=tinysrgb&w=800&lazy=load",
				"https://images.pexels.com/photos/16971358/pexels-photo-16971358.jpeg?auto=compress&cs=tinysrgb&w=800&lazy=load",
				"https://images.pexels.com/photos/16971357/pexels-photo-16971357.jpeg?auto=compress&cs=tinysrgb&w=800&lazy=load",
				"https://images.pexels.com/photos/16971356/pexels-photo-16971356.jpeg?auto=compress&cs=tinysrgb&w=800&lazy=load",
				"https://images.pexels.com/photos/16971355/pexels-photo-16971355.jpeg?auto=compress&cs=tinysrgb&w=800&lazy=load",
				"https://images.pexels.com/photos/16856628/pexels-photo-16856628.jpeg?auto=compress&cs=tinysrgb&w=800&lazy=load"
			];

			const dareImages = [
				"https://images.pexels.com/photos/16856726/pexels-photo-16856726.jpeg?auto=compress&cs=tinysrgb&w=800&lazy=load",
				"https://images.pexels.com/photos/16856727/pexels-photo-16856727.jpeg?auto=compress&cs=tinysrgb&w=800&lazy=load",
				"https://images.pexels.com/photos/16856731/pexels-photo-16856731.jpeg?auto=compress&cs=tinysrgb&w=800&lazy=load",
				"https://images.pexels.com/photos/16856741/pexels-photo-16856741.jpeg?auto=compress&cs=tinysrgb&w=800&lazy=load",
				"https://images.pexels.com/photos/16971347/pexels-photo-16971347.jpeg?auto=compress&cs=tinysrgb&w=800&lazy=load",
				"https://images.pexels.com/photos/16971348/pexels-photo-16971348.jpeg?auto=compress&cs=tinysrgb&w=800&lazy=load",
				"https://images.pexels.com/photos/16971349/pexels-photo-16971349.jpeg?auto=compress&cs=tinysrgb&w=800&lazy=load",
				"https://images.pexels.com/photos/16971350/pexels-photo-16971350.jpeg?auto=compress&cs=tinysrgb&w=800&lazy=load",
				"https://images.pexels.com/photos/16971351/pexels-photo-16971351.jpeg?auto=compress&cs=tinysrgb&w=800&lazy=load",
				"https://images.pexels.com/photos/16856792/pexels-photo-16856792.jpeg?auto=compress&cs=tinysrgb&w=800&lazy=load"
			];

			function getRandomImage(images) {
				const randomIndex = Math.floor(Math.random() * images.length);
				return images[randomIndex];
			}

			function showImage(image) {
				const imageContainer = document.getElementById("imageContainer");
				const randomImage = document.getElementById("randomImage");
				randomImage.src = image;
				imageContainer.classList.remove("hidden");
				document.querySelector(".container").classList.add("hidden");
			}

			document.getElementById("truthBtn").addEventListener("click", function() {
				const randomImage = getRandomImage(truthImages);
				showImage(randomImage);
			});

			document.getElementById("dareBtn").addEventListener("click", function() {
				const randomImage = getRandomImage(dareImages);
				showImage(randomImage);
			});

			document.getElementById("replayBtn").addEventListener("click", function() {
				const imageContainer = document.getElementById("imageContainer");
				imageContainer.classList.add("hidden");
				document.querySelector(".container").classList.remove("hidden");
			});
		})();
	</script>
</body>
</html>
